{
  "name": "essencek",
  "author": "Jordan Le Pera",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:spotlight": "bunx @spotlightjs/sidecar",
    "dev:next": "next dev --turbopack",
    "dev": "concurrently --kill-others \"bun run dev:spotlight\" \"bun run dev:next\"",
    "build:next": "next build",
    "build": "concurrently --kill-others \"bun run build:next\"",
    "start": "next start",
    "serve:build-stats": "bun run next experimental-analyze",
    "build-stats": "bun run next experimental-analyze --output",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "check:i18n": "i18n-check -l src/locales -s en -u src -f next-intl",
    "commit": "commit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build",
    "lighthouse": "unlighthouse-ci --site localhost:3000",
    "test:lighthouse": "concurrently --kill-others \"bun run start\" \"bun run lighthouse --race\"",
    "info": "next info"
  },
  "dependencies": {
    "@arcjet/next": "1.0.0-beta.17",
    "@hookform/resolvers": "^5.2.2",
    "@logtape/logtape": "^2.0.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "^1.0.4",
    "@react-email/tailwind": "^2.0.3",
    "@sentry/nextjs": "^10.34.0",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@types/canvas-confetti": "^1.9.0",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.26.2",
    "lucide-react": "^0.562.0",
    "next": "^16.1.3",
    "next-intl": "^4.7.0",
    "posthog-js": "^1.327.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.71.1",
    "resend": "^6.7.0",
    "tailwind-merge": "^3.4.0",
    "vite": "^7.3.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.0.1",
    "@chromatic-com/playwright": "^0.12.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@commitlint/prompt-cli": "^20.3.1",
    "@commitlint/types": "^20.3.1",
    "@eslint-react/eslint-plugin": "^2.7.1",
    "@faker-js/faker": "^10.2.0",
    "@lingual/i18n-check": "^0.8.18",
    "@next/bundle-analyzer": "^16.1.3",
    "@next/eslint-plugin-next": "^16.1.3",
    "@playwright/test": "^1.57.0",
    "@spotlightjs/overlay": "^4.5.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/nextjs-vite": "^10.1.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "checkly": "^6.9.10",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.5.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-storybook": "^10.1.11",
