{
  "name": "essencek",
  "author": "Jordan Le Pera",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:spotlight": "bunx @spotlightjs/sidecar",
    "dev:next": "next dev --turbopack",
    "dev": "concurrently --kill-others \"bun run dev:spotlight\" \"bun run dev:next\"",
    "build:next": "next build",
    "build": "concurrently --kill-others \"bun run build:next\"",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true bun run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "check:i18n": "i18n-check -l src/locales -s en -u src -f next-intl",
    "commit": "commit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build",
    "lighthouse": "unlighthouse-ci --site localhost:3000",
    "test:lighthouse": "run-p start lighthouse --race",
    "info": "next info"
  },
  "dependencies": {
    "@arcjet/next": "1.0.0-beta.15",
    "@hookform/resolvers": "^5.2.2",
    "@logtape/logtape": "^1.3.5",
    "@sentry/nextjs": "^10.32.1",
    "@t3-oss/env-nextjs": "^0.13.10",
    "concurrently": "^9.2.1",
    "next": "^16.1.0",
    "next-intl": "^4.6.1",
    "posthog-js": "^1.309.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.69.0",
    "vite": "^7.3.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.2",
    "@chromatic-com/playwright": "^0.12.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/prompt-cli": "^20.2.0",
    "@commitlint/types": "^20.2.0",
    "@eslint-react/eslint-plugin": "^2.3.13",
    "@faker-js/faker": "^10.1.0",
    "@lingual/i18n-check": "^0.8.16",
    "@next/bundle-analyzer": "^16.1.0",
    "@next/eslint-plugin-next": "^16.1.0",
    "@playwright/test": "^1.57.0",
    "@spotlightjs/overlay": "^4.5.0",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/nextjs-vite": "^10.1.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "checkly": "^6.9.7",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-storybook": "^10.1.10",
    "knip": "^5.76.1",
    "lefthook": "^2.0.12",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "storybook": "^10.1.10",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "unlighthouse": "^0.17.4",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16",
    "vitest-browser-react": "^2.0.2"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
